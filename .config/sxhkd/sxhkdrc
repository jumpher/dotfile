# Mocp
ctrl + shift + m
	st -e mocp

# Changes to next/previous tracks
ctrl + shift + {comma,period}
	mocp {--prev,--next}

# Seek foward in song
ctrl + {_,shift +} bracketright
	mocp --seek +{10,10}

# Seek backward in song
ctrl + {_,shift +} bracketleft
	mocp --seek -{10,10}

#Play/Pause
ctrl + shift + question
	mocp -G

